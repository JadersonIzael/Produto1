@{
    ViewData["Title"] = "Employee Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="form-group">
        <input type="Button" class="form-control btn btn-secondary" id="btnEmployeeListId" name="btnEmployeeList" value="Listar Dados" />
    </div>
    <div class="form-group">
        <input type="Button" class="form-control btn btn-green" id="btnInputId" name="btnEdit" value="Mais opções" />
    </div>
</div>

<!-----------------------------------------------------Modal de cadastro e pesquisa--------------------------------->

<div class="container">
   
    <div class="modal fade" id="modalInputId" role="dialog">
        <div class="modal-dialog">
            
            <div class="modal-content">
                <div class="modal-header" style="padding:15px 25px;">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body" style="padding:40px 50px;" align="center">
                    <div class="col">
                        <div class="row">
                            <div class="form-group">
                                <label>Id</label>
                                <input type="number" class="form-control" id="employeeId" name="Id" min="1" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label>Nome</label>
                                <input class="form-control" id="employeeNameId" name="Nome" maxlength="50" minlength="1" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label>Cargo</label>
                                <input class="form-control" id="employeeOfficeId" name="Cargo" maxlength="50" minlength="1" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label>DataNascimento</label>
                                <input type="datetime" class="form-control" id="employeeBirthDateId" name="DataNascimento" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label>Salario</label>
                                <input type="number" class="form-control" id="employeeWageId" name="Salario" min="0"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label>Ativo</label>
                                <input type="number" class="form-control" id="employeeActiveId" name="Ativo" min="0" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label>Sexo</label>
                                <input class="form-control" id="employeeSexId" name="Sexo" maxlength="1" minlength="1" />
                            </div>
                        </div><!--
                        <div class="row">
                            <div class="form-group">
                                <label>DiasAfastado</label>
                                <input type="number" class="form-control" id="employeeDaysAwayId" name="DiasAfastado" min = "0" />
                            </div>
                        </div>-->
                        
                    </div>
                    <div class="col">
                        <div class="row">
                            <div class="form-group">
                                <input type="Button" class="form-control btn btn-primary" id="btnPostId" name="btnPost" value="Cadastrar" />
                            </div>
                            <div class="form-group">
                                <input type="Button" class="form-control btn btn-info" id="btnGetId" name="btnGet" value="Pesquisar" />
                            </div>
                            <div class="form-group">
                                <input type="Button" class="form-control btn btn-dark" id="btnPutId" name="btnPut" value="Editar" />
                            </div>
                            <div class="form-group" id="deleteItemId">
                                <input type="Button" class="form-control btn btn-danger" id="btnDeleteId" name="btnDelete" value="Deletar" />
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<!---------------------------------Details Modal--------------------------------->


<div class="container">
   
    <div class="modal fade" id="modalEmployeeDetailsId" role="dialog">
        <div class="modal-dialog">

           
            <div class="modal-content">
                <div class="modal-header" style="padding:15px 25px;">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body" style="padding:40px 50px;" align="center">
                    <form role="form">
                        <div class="row">                            
                            <div class="col-3" id="modalContentBody">
                                <div>Id:</div>
                                <div id="detailsEmployeeId"></div>
                            </div>
                            <div class="col-3" id="modalContentBody">
                                <div>Nome:</div>
                                <div id="detailsEmployeeName"></div>
                            </div>
                            <div class="col-3" id="modalContentBody">
                                <div>Data-Nascimento:</div>
                                <div id="detailsEmployeeBirthDate"></div>
                            </div>                            
                            <div class="col-3" id="modalContentBody">
                                <div>Salario:</div>
                                <div id="detailsEmployeeWage"></div>
                            </div>                                                        
                            <div class="col-3" id="modalContentBody">
                                <div>Cargo:</div>
                                <div id="detailsEmployeeOffice"></div>
                            </div>                            
                            <div class="col-3" id="modalContentBody">
                                <div>Ativo:</div>
                                <div id="detailsEmployeeActive"></div>
                            </div>                                                        
                            <div class="col-3" id="modalContentBody">
                                <div>Sexo:</div>
                                <div id="detailsEmployeeSex"></div>
                            </div>
                            <div class="col-3" id="modalContentBody">
                                <div>Data-Criacao:</div>
                                <div id="detailsEmployeeCreateDate"></div>
                            </div>
                            <div class="col-3" id="modalContentBody">
                                <div>Data-Atualizacao:</div>
                                <div id="detailsEmployeeUpdateDate"></div>
                            </div>
                            <div class="col-3" id="modalContentBody">
                                <div>Afastado:</div>
                                <div id="detailsEmployeeDaysAway"></div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
   
    <div class="modal fade" id="modalEditId" role="dialog">
        <div class="modal-dialog">
            
            <div class="modal-content">
                <div class="modal-header" style="padding:15px 25px;">
                    <div>Id:</div>
                    <div id="editId"></div>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body" style="padding:40px 50px;" align="center">
                    <form role="form" >
                        <div class="row">
                            <div class="form-group">
                                <label for="editNameId"><span class="glyphicon glyphicon-eye-open"></span>Nome</label>
                                <input type="text" class="form-control" id="editNameId" min="1" required>
                            </div>
                            <div class="form-group">
                                <label for="editOfficeId"><span class="glyphicon glyphicon-eye-open"></span>Cargo</label>
                                <input type="text" class="form-control" id="editOfficeId" maxlength="50" minlength="1" required>
                            </div>
                            <div class="form-group">
                                <label for="editBirthDateId"><span class="glyphicon glyphicon-eye-open"></span>Data de Nascimento</label>
                                <input type="text" class="form-control" id="editBirthDateId" required>
                            </div>
                            <div class="form-group">
                                <label for="editWageId"><span class="glyphicon glyphicon-eye-open"></span>Salario</label>
                                <input type="text" class="form-control" id="editWageId" maxlength="50" minlength="1" required>
                            </div> 
                            <div class="form-group">
                                <label for="editActiveId"><span class="glyphicon glyphicon-eye-open"></span>Ativo</label>
                                <input type="text" class="form-control" id="editActiveId" maxlength="50" minlength="1" required>
                            </div>
                            <div class="form-group">
                                <label for="editSexId"><span class="glyphicon glyphicon-eye-open"></span>Sexo</label>
                                <input type="text" class="form-control" id="editSexId" maxlength="1" minlength="1" required>
                            </div> 
                            <div class="form-group">
                                <label for="editDaysAwayId"><span class="glyphicon glyphicon-eye-open"></span>Dias afastado</label>
                                <input type="text" class="form-control" id="editDaysAwayId" maxlength="50" minlength="1" required>
                            </div>
                        </div>
                    </form>
                    <div class="form-group">
                        <input type="Button" class="form-control btn pull-left" id="btnPutModalId" name="btnPutModal" value="Salvar" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!---------------------------------Details Modal---------------------------------->


<table class="table table-striped table-bordered" width="100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Cargo</th>
            <th>Data de nascimento</th>
            <th>Salario</th>
            <th>Ativo</th>
            <th>Sexo</th>
            <th>Deletar</th>
            <th>Detalhes</th>
            <th>Editar</th>
        </tr>
    </thead>
    <tbody id=employeeBodyTableId>
    </tbody>
</table>

@section Scripts{
<script src="~/js/createTable.js"></script>
<script src="~/js/tableEmployee.js"></script>
<script src="~/js/Employee.js"></script>}
