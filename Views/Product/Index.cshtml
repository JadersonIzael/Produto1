-----------------------------------------------------Modal de cadastro e pesquisa----------------------------------------->

<div class="container">
    <!--Modal-->
    <div class="modal fade" id="modalTestId" role="dialog">
        <div class="modal-dialog">
            <!--Modal content-->
            <div class="modal-content">
                <div class="modal-header" style="padding:15px 25px;">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body" style="padding:40px 50px;" align="center">
                    <div class="col">
                        <div class="row">
                            <div class="form-group">
                                <label>Id</label>
                                <input type="number" class="form-control" id="productId" name="Id" min="1" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label>Codigo</label>
                                <input type="number" class="form-control" id="productCodeId" name="Codigo" min="1" step="1" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label>Descricao</label>
                                <input class="form-control" id="productDescriptionId" name="Descricao" maxlength="50" minlength="1"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label>Estoque</label>
                                <input type="number" class="form-control" id="productAmountId" name="Estoque" min="0" step="1" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label>Preco</label>
                                <input type="number" class="form-control" id="productValueId" name="Preco" min ="0.1" step="0.01" />
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="row">
                            <div class="form-group">
                                <input type="Button" class="form-control btn btn-primary" id="btnPostId" name="btnPost" value="Cadastrar" />
                            </div>
                            <div class="form-group">
                                <input type="Button" class="form-control btn btn-info" id="btnGetId" name="btnGet" value="Pesquisar" />
                            </div>
                            <div class="form-group">
                                <input type="Button" class="form-control btn btn-dark" id="btnPutId" name="btnPut" value="Editar" />
                            </div>
                            <div class="form-group" id="deleteItemId">
                                <input type="Button" class="form-control btn btn-danger" id="btnDeleteId" name="btnDelete" value="Deletar" />
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- ---------------------------------Details Modal---------------------------------->


<div class="container">
    <!--Modal-->
    <div class="modal fade" id="modalId" role="dialog">
        <div class="modal-dialog">

            <!--Modal content-->
            <div class="modal-content">
                <div class="modal-header" style="padding:15px 25px;">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body" style="padding:40px 50px;" align="center">
                    <form role="form">
                        <div class="row">                            
                            <div class="col-3" id="modalContentBody">
                                <div>Id:</div>
                                <div id="detailsProductId"></div>
                            </div>
                            <div class="col-3" id="modalContentBody">
                                <div>Codigo:</div>
                                <div id="detailsProductCode"></div>
                            </div>
                            <div class="col-3" id="modalContentBody">
                                <div>Estoque:</div>
                                <div id="detailsProductAmount"></div>
                            </div>
                            <div class="col-3" id="modalContentBody">
                                <div>Preço:</div>
                                <div id="detailsProductValue"></div>
                            </div>
                        </div>
                            <div class="row">                            
                            <div class="col-9" id="modalContentBody">
                                <div>Descrição:</div>
                                <div id="detailsProductDescription"></div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!----------------------------------------------------------Edit--------Modal------------------------------------------------->
    <div class="modal fade" id="modalUpdateId" role="dialog">
        <div class="modal-dialog">

            <!--Modal content-->
            <div class="modal-content">
                <div class="modal-header" style="padding:15px 25px;">
                    <div>Id:</div>
                    <div id="editId"></div>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body" style="padding:40px 50px;" align="center">
                    <form role="form" >
                        <div class="row">
                            <div class="form-group">
                                <label for="editCodeId"><span class="glyphicon glyphicon-eye-open"></span>Codigo</label>
                                <input type="text" class="form-control" id="editCodeId" min="1" required>
                            </div>
                            <div class="form-group">
                                <label for="editAmountId"><span class="glyphicon glyphicon-eye-open"></span>Estoque</label>
                                <input type="text" class="form-control" id="editAmountId" min="1" required>
                            </div>
                            <div class="form-group">
                                <label for="editValueId"><span class="glyphicon glyphicon-eye-open"></span>Preço</label>
                                <input type="text" class="form-control" id="editValueId" min="1" required>
                            </div>
                            <div class="form-group">
                                <label for="editdescriptionId"><span class="glyphicon glyphicon-eye-open"></span>Descricao</label>
                                <input type="text" class="form-control" id="editDescriptionId" maxlength="50" minlength="1" required>
                            </div> 
                            </div>
                    </form>
                    <div class="form-group">
                        <input type="Button" class="form-control btn pull-left" id="btnPutModalId" name="btnPutModal" value="Salvar" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

