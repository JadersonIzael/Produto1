@{
    ViewData["Title"] = "Product Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col">
    <div class="row">
        <div class="form-group">
            <label>Id</label>
            <input type="number" class="form-control" id="productId" name="Id" />
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <label>Codigo</label>
            <input type="number" class="form-control" id="productCodeId" name="Codigo" step="1" />
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <label>Descricao</label>
            <input class="form-control" id="productDescriptionId" name="Descricao" />
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <label>Estoque</label>
            <input type="number" class="form-control" id="productAmountId" name="Estoque" step="1" />
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <label>Preco</label>
            <input type="number" class="form-control" id="productValueId" name="Preco" step="0.01" />
        </div>
    </div>
</div>
<div class="col">
    <div class="row">
        <div class="form-group">
            <input type="Button" class="form-control btn btn-primary" id="btnPostId" name="btnPost" value="post" />
        </div>
        <div class="form-group">
            <input type="Button" class="form-control btn btn-info" id="btnGetId" name="btnGet" value="get" />
        </div>
        <div class="form-group">
            <input type="Button" class="form-control btn btn-dark" id="btnPutId" name="btnPut" value="put" />
        </div>
        <div class="form-group" id="deleteItemId">
            <input type="Button" class="form-control btn btn-secondary" id="btnDeleteId" name="btnDelete" value="delete" />
        </div>
        <div class="form-group">
            <input type="Button" class="form-control btn btn-danger" id="btnListId" name="btnList" value="list" />
        </div>
    </div>
</div>
<!-- ---------------------------------Details Modal---------------------------------->

<div class="container">
    <!--Modal-->
    <div class="modal fade" id="modalId" role="dialog">
        <div class="modal-dialog">

            <!--Modal content-->
            <div class="modal-content">
                <div class="modal-header" style="padding:15px 25px;">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body" style="padding:40px 50px;" align="center">
                    <form role="form">
                        <div class="row">
                            <div class="col-3">
                                <span>Id:</span>
                                <span id="detailsProductId"></span>
                            </div>
                            <div class="col-3">
                                <span>Codigo:</span>
                                <span id="detailsProductCode"></span>
                            </div>
                            <div class="col-3">
                                <span>Estoque:</span>
                                <span id="detailsProductAmount"></span>
                            </div>
                            <div class="col-3">
                                <span>Preço:</span>
                                <span id="detailsProductValue"></span>
                            </div>
                        </div>
                        <div class="row">                            
                            <div class="col-9">
                                <span>Descrição:</span>
                                <span id="detailsProductDescription"></span>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<table class="table table-striped table-bordered" width="100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Codigo</th>
            <th>Descrição</th>
            <th>Estoque</th>
            <th>Preço</th>
            <th>Deletar</th>
            <th>Detalhes</th>
        </tr>
    </thead>
    <tbody id=productBodyTableId>
    </tbody>
</table>

@section Scripts{
<script src="~/js/createTable.js"></script>
<script src="~/js/table.js"></script>
<script src="~/js/Product.js"></script>}